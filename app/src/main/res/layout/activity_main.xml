<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:textStyle="bold"
        android:id="@+id/tvView1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="#2196F3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="View1"/>
    <TextView
        android:textStyle="bold"
        android:id="@+id/tvView2"
        app:layout_constraintRight_toLeftOf="@id/tvView1"
        app:layout_constraintBottom_toTopOf="@id/tvView1"
        android:textColor="#FF5722"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="View2"/>
    <TextView
        android:textStyle="bold"
        android:id="@+id/tvView3"
        app:layout_constraintLeft_toRightOf="@id/tvView1"

        app:layout_constraintBottom_toTopOf="@id/tvView1"
        android:textColor="#00BCD4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="View3"/>
    <TextView
        android:textStyle="bold"
        android:id="@+id/tvView4"
        app:layout_constraintLeft_toRightOf="@id/tvView1"
        app:layout_constraintTop_toBottomOf="@id/tvView1"
        android:textColor="#FFC107"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="View4"/>
    <TextView
        android:textStyle="bold"
        android:id="@+id/tvView5"
        app:layout_constraintRight_toLeftOf="@id/tvView1"
        app:layout_constraintTop_toBottomOf="@id/tvView1"
        android:textColor="#FFC107"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="View5"/>
</android.support.constraint.ConstraintLayout>